<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.ugarosa.neovim</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Neovim</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor>uga-rosa</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Use Neovim as a backend for IntelliJ IDEA.<br/>
    Provides a real Neovim experience in IntelliJ IDEA.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.ugarosa.neovim.startup.NeovimStartupActivity"/>
        <editorFactoryListener implementation="com.ugarosa.neovim.extension.NeovimEditorFactoryListener"/>
        <statusBarWidgetFactory id="NeovimModeWidgetId"
                                implementation="com.ugarosa.neovim.extension.NeovimModeWidgetFactory"/>
        <applicationConfigurable key="configurable.display.name.neovim"
                                 bundle="messages.NeovimBundle"
                                 instance="com.ugarosa.neovim.extension.NeovimKeymapConfigurable"/>
        <actionPromoter implementation="com.ugarosa.neovim.extension.NeovimActionPromoter"/>
    </extensions>

    <applicationListeners>
        <listener class="com.ugarosa.neovim.listener.NeovimKeymapInitializer"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>

    <actions>
        <action id="NeovimKeyAction" class="com.ugarosa.neovim.action.NeovimKeyAction"/>
    </actions>
</idea-plugin>